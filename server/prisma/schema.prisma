generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Habit {
  id String @id @default(uuid())
  name String
  dueDate DateTime?
  isPaused Boolean @default(false)
  habitTracking HabitTracking[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  @@map("habit")
}

model User {
  id String @id @default(uuid())
  name String
  habitTracking HabitTracking[]
  @@map("user")
}

model HabitTracking {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  habit Habit @relation(fields: [habitId], references: [id])
  habitId String @unique
  date DateTime
  points Int
  @@map("habit_tracking")
}

model Task {
  id String @id @default(uuid())
  title String
  dueDate DateTime?
  userId Int @unique
  complex Complexities @relation(fields: [complexId], references: [id])
  complexId Int @unique
  completedDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("task")

}

model Complexities {
  id Int @id @default(autoincrement())
  name String
  tasks Task[]
  @@map("complexities")

}